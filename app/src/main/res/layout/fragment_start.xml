<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_home__2_"
        tools:context=".ui.StartFragment">


        <TextView
            android:id="@+id/explorer"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_33sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:gravity="center"
            android:text="@string/mars_real_estate"
            android:textColor="#F9AD1A"
            android:textSize="@dimen/_24ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/astronomer_"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_300sdp"
            android:layout_marginBottom="@dimen/_143sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_started_imge" />


        <ImageView
            android:id="@+id/rocket_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="@id/letsGoButton"
            app:layout_constraintTop_toTopOf="@id/letsGoButton"
            android:src="@drawable/ic_rockek"
            android:elevation="@dimen/_4sdp"
            />

        <Button
            android:id="@+id/letsGoButton"
            style="@style/lets_go_button_style"
            android:layout_width="345dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/let_s_go"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/astronomer_">

        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>